{% extends "::baseCharisma.html.twig" %}
{% block title %}Pedidos - Logística -{% endblock %}
{% block breadcrumb %}
<li>
	<a href="{{path('dicars_logistica_homepage')}}">Logística</a> <span class="divider">/</span>
</li>
<li>
	<a href="{{path('dicars_logistica_pedidos')}}">Pedidos</a>
</li>
{% endblock %}
{% block content %}
<div class="row-fluid sortable">		
	<div class="box span12">
		<div class="box-header well" data-original-title>
			<h2>Lista de Pedidos</h2>
			<div class="box-icon">
				<a href="{{path('dicars_logistica_pedidos_registrar')}}" class="btn btn-round" alt="Registrar Pedido"><i class="icon-plus"></i></a>
				<!-- a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a -->
			</div>
		</div>
		<div class="box-content">
			<table id="pedidos_table" class="table table-striped table-bordered bootstrap-datatable datatable">
			  <thead>
				  <tr>
					  <th>Registrador</th>
					  <th>Local</th>
					  <th>Serie Prod.</th>
					  <th>Número Prod.</th>
					  <th>Fecha de Registro</th>
					  <th>Fecha de Entrega</th>
					  <th></th>
					  <th></th>
				  </tr>
			  </thead>   
			  <tbody>
			  </tbody>
		  </table>       
		</div>
	</div><!--/span-->
</div><!--/row-->

{% endblock %}
{% block javascript %}
<script src="{{ asset('js/util/functiongen.js') }}"></script>
<script src="{{ asset('js/util/datatable_plugins.js') }}"></script>
<script type="text/javascript">
var CargarBotones;
$(document).ready(function(){
	
	CargarBotones = function(){
		//	mostrar Editar Trabajador------------------------------------>
			$('.btn-editar').unbind();
			$('.btn-editar').click(function(e){
				e.preventDefault();
				$('#modalEditarDatos').modal('show');
				id=$(this).attr("id-data");		
				cargarEditar(id);
			});		
		//mostrar Ver Datos Trabajador------------------------------------>
			$('.btn-datos').unbind();
			$('.btn-datos').click(function(e){
				id=$(this).attr("id-data");	
				$(this).attr('href',"{{ path('dicars_logistica_pedidos_ver',{'idpedido':''}) }}/"+id);
			});
	};
	
	UrlaDTable = '{{ path("dicars_logistica_servicio_gettablaordpeds") }}';
	FormatoDTable = [
	              { "sWidth": "15%","mDataProp": "registrante"},
	              { "sWidth": "13%","mDataProp": "local"},
	              { "sWidth": "11%","mDataProp": "serie"},
	              { "sWidth": "11%","mDataProp": "numero"},	  
	              { "sWidth": "13%","mDataProp": "fecha_reg"},
	              { "sWidth": "13%","mDataProp": "fecha_ent"},
	              { "sWidth": "13%","mDataProp": "ver_btn"},
	              { "sWidth": "11%","mDataProp": "elim_btn"}
	              ];
	PedidosTable = createDataTable('pedidos_table',UrlaDTable,FormatoDTable,CargarBotones);		
	});

	/*ReloadTableEditar = reloadclosemodal('modalEditarDatos', 'empleados_table');
	ReloadTableRegistrar = reloadclosemodal('modalRegistro', 'empleados_table');
	
	enviar('RegistrarTrabajadorForm', ReloadTableRegistrar);
	enviar('EditarEmpleadoForm', ReloadTableEditar);*/
	
</script>
{% endblock %}
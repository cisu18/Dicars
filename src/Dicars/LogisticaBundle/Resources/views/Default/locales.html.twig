{% extends "::baseCharisma.html.twig" %}
{% block title %}Locales - Logística -{% endblock %}
{% block breadcrumb %}
<li>
	<a href="{{path('dicars_ventas_homepage')}}">Logística</a><span class="divider">/</span>
</li>
<li>
	<a href="{{path('dicars_logistica_locales')}}">Locales</a>
</li>
{% endblock %}
{% block content %}
<div class="row-fluid">		
	<div class="box span12">
		<div class="box-header well" data-original-title>
			<h2>Locales</h2>
			<div class="box-icon">
				<a href="#" class="btn btn-registrar btn-round" alt="Registrar Local"><i class="icon-plus"></i></a>
				<!-- a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a -->
			</div>
		</div>
		<div class="box-content">
			<table class="table table-striped table-bordered bootstrap-datatable datatable" id="locales_table">
			  <thead>
				  <tr>
					  <th>Nombre</th>
					  <th>Estado</th>
					  <th>Teléfono</th>
					  <th>Dirección</th>
					  <th>Tipo de Rubro</th>
					  <th>Acciones</th>
				  </tr>
			  </thead>   
			  <tbody>
			</tbody>
		</table>
		<div class="modal hide fade" id="modalRegistro">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">x</button>
				<h3>Registrar Local</h3>
			</div>
			<div class="modal-body">
				<form id="RegistrarLocalForm" class="form-horizontal" method="post" action="{{ path('dicars_logistica_registrar_local') }}">
					<fieldset>
						<div class="control-group">
							<label class="control-label" for="nombre_tienda">Nombre de la Tienda</label>
							<div class="controls">
						  		<input class="input-xlarge focused" id="nombre_tienda" name="nombre_tienda" type="text">
							</div>
					  	</div>
					  	<div class="control-group">
							<label class="control-label" for="estado">Estado</label>
							<div class="controls">
						  		<select id="estado" name="estado">
									<option value="1">Habilitado</option>
									<option value="0">Inhabilitado</option>
								</select>
							</div>
					  	</div>
					  	<div class="control-group">
							<label class="control-label" for="direccion">Dirección</label>
							<div class="controls">
						  		<input class="input-xlarge focused" id="direccion" name="direccion" type="text">
							</div>
					  	</div>
					  	<div class="control-group">
							<label class="control-label" for="telefono">Teléfono</label>
							<div class="controls">
						  		<input class="input-xlarge focused" id="telefono" name="telefono" type="text">
							</div>
					  	</div>
					  	<div class="control-group">
							<label class="control-label" for="tiprub">Tipo de Rubro</label>
							<div class="controls">
						  		<select id="tiprub" name="tiprub">
								</select>
							</div>
					  	</div>
					  	<h4>Ubigeo</h4>
					  	<hr>
					  	<div class="control-group">
							<label class="control-label" for="dep">Departamento</label>
							<div class="controls">
						  		<select id="dep" name="dep">
								</select>
							</div>
					  	</div>
					  	<div class="control-group">
							<label class="control-label" for="prov">Provincia</label>
							<div class="controls">
						  		<select id="prov" name="prov">
								</select>
							</div>
					  	</div>
					  	<div class="control-group">
							<label class="control-label" for="dist">Distrito</label>
							<div class="controls">
						  		<select id="dist" name="dist">
								</select>
							</div>
					  	</div>
					  	<div class="form-actions">
							<button type="submit" class="btn btn-primary">Guardar</button>
							<button type="reset" class="btn" data-dismiss="modal">Cancelar</button>
						</div>
					</fieldset>
				  </form>
			</div>
		</div>
		<div class="modal hide fade" id="modalEditarLocal">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">x</button>
				<h3>Editar Local</h3>
			</div>
			<div class="modal-body">
				<form id="EditarLocalForm" class="form-horizontal" method="post" action="{{ path('dicars_logistica_editar_local') }}">
				</form>
			</div>
		</div>
		<div class="modal hide fade" id="modalVerDatos">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">x</button>
				<h3>Datos del Local</h3>
			</div>
			<div class="modal-body">
				<div id="VerLocal" class="form-horizontal">
				</div>
			</div>
		</div>   
		</div>
	</div><!--/span-->
</div><!--/row-->

{% endblock %}
{% block javascript %}
<script type="text/javascript" src="{{ asset('js/util/functiongen.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/util/datatable_plugins.js') }}"></script>

<script type="text/javascript">

var oTable;

var ReloadTableEditar = reloadclosemodal('modalEditarLocal', 'locales_table');
var ReloadTableRegistrar = reloadclosemodal('modalRegistro', 'locales_table');

var urlDistritos;
var urlProvincias;
var urlDepartamentos;
var urlTipRub;

var CargarBotones = function(){
	//mostrar Editar Cliente------------------------------------>
	$('.btn-editar').click(function(e){
		e.preventDefault();
		$('#modalEditarLocal').modal('show');
		id=$(this).attr("id-data");		
		cargarEditar(id);
	});
	//mostrar Ver Datos------------------------------------>
	$('.btn-datos').click(function(e){
		e.preventDefault();
		$('#modalVerDatos').modal('show');
		id=$(this).attr("id-data");		
		cargarVer(id);	
	});
};

function cargarEditar(id){
	url = "{{ path('dicars_logistica_servicio_getlocalbyid', {'id': ''}) }}/"+id;
	local = getAjaxObject(url);			

	ArrayDatos = [	{'type':'hidden','value':local.id,'name':'id'},
	          		{'label':'Nombre de Tienda','type':'input', 'typeinput':'text','value':local.nombre_tienda,'name':'nombre_tiendaE'},
	              	{'label':'Estado','type':'select','name':'estadoE'},
	              	{'label':'Dirección','type':'input','typeinput':'text','value':local.direccion,'name':'direccionE'},
	              	{'label':'Teléfono','type':'input','typeinput':'text','value':local.telefono,'name':'telefonoE'},
	              	{'label':'Departamento','type':'select','name':'depE'},
	              	{'label':'Provincia','type':'select','name':'provE'},
	              	{'label':'Distrito','type':'select','name':'distE'},
	              	{'label':'Tipo de Rubro','type':'input','typeinput':'text','value':local.tiprub,'name':'tiprubE'},
					{'type':'actions'}
					];
		
	$("#EditarLocalForm").html(crearElementosForm(ArrayDatos));
	
	$('#estadoE').append('<option value="1">Habilitado</option>');
	$('#estadoE').append('<option value="2">Inhabilitado</option>');
	$('#estadoE').val(local.estadoE);

	cargarUbigeo('distE', 'provE', 'depE');
	
	$('#depE').val(local.depE);
	$('#provE').val(local.provE);
	$('#distE').val(local.distE);	
}

function cargarVer(id){
	url = "{{ path('dicars_logistica_servicio_getlocalbyid', {'id': ''}) }}/"+id;
	local = getAjaxObject(url);			

	ArrayDatos = [	{'label':'Nombre de Tienda','type':'span','value':local.nombre_tienda},
	              	{'label':'Estado','type':'span','value':local.estado},
	              	{'label':'Dirección','type':'span','value':local.direccion},
	              	{'label':'Teléfono','type':'span','value':local.telefono},
	              	{'label':'Ubigeo','type':'span','value':local.ubigeo},
	              	{'label':'Tipo de Rubro','type':'span','value':local.tiprub},
					{'type':'close'}];
		
	$("#VerLocal").html(crearElementosForm(ArrayDatos));
}

function cargarUbigeo(idtagdist, idtagprov, idtagdep){
	urlDepartamentos = "{{ path('dicars_admin_servicio_getoptiondepartamentos') }}";
	ajaxResponseData(idtagdep,urlDepartamentos);

	iddep = $('#'+idtagdep).val();
	urlProvincias = "{{ path('dicars_admin_servicio_getoptionprovincias',{'iddep':''}) }}/"+iddep;
	ajaxResponseData(idtagprov,urlProvincias);

	idprov = $('#'+idtagprov).val();
	urlDistritos = "{{ path('dicars_admin_servicio_getoptiondistritos',{'idprov':''}) }}/"+idprov;
	ajaxResponseData(idtagdist,urlDistritos);
	
	$('#'+idtagdep).change(function(){
		iddep = $('#'+idtagdep).val();
		urlProvincias = "{{ path('dicars_admin_servicio_getoptionprovincias',{'iddep':''}) }}/"+iddep;
		ajaxResponseData(idtagprov,urlProvincias);

		idprov = $('#'+idtagprov).val();
		urlDistritos = "{{ path('dicars_admin_servicio_getoptiondistritos',{'idprov':''}) }}/"+idprov;
		ajaxResponseData(idtagdist,urlDistritos);
	});

	$('#'+idtagprov).change(function(){
		idprov = $('#'+idtagprov).val();
		urlDistritos = "{{ path('dicars_admin_servicio_getoptiondistritos',{'idprov':''}) }}/"+idprov;
		ajaxResponseData(idtagdist,urlDistritos);
	});
}

//init------------------------------------>
$(document).ready(function(){	

	cargarUbigeo('dist', 'prov', 'dep');

	urlTipRub = "{{ path('dicars_admin_servicio_getoptiontiprubs') }}";
	ajaxResponseData('tiprub', urlTipRub);
	
	//mostrar Registrar Cliente------------------------------------>
	$('.btn-registrar').click(function(e){
		e.preventDefault();
		$('#modalRegistro').modal('show');
	});
	
	enviar('RegistrarLocalForm', ReloadTableRegistrar);
	enviar('EditarLocalForm', ReloadTableEditar);

	UrlaDTable = '{{ path("dicars_logistica_servicio_gettablalocales") }}';
	FormatoDTable = [
		              { "sWidth": "12%","mDataProp": "nombre_tienda"},
		              { "sWidth": "12%","mDataProp": "estado"},
		              { "sWidth": "12%","mDataProp": "telefono"},
		              { "sWidth": "12%","mDataProp": "direccion"},
		              { "sWidth": "12%","mDataProp": "tiprub"},
		              { "sWidth": "40%","mDataProp": "Acciones"}
		              ];
	oTable = createDataTable('locales_table',UrlaDTable,FormatoDTable,CargarBotones);
});
</script>
{% endblock %}
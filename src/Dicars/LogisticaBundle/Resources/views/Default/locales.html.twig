{% extends "::baseCharisma.html.twig" %}
{% block title %}Locales - Logística -{% endblock %}
{% block breadcrumb %}
<li>
	<a href="{{path('dicars_ventas_homepage')}}">Logística</a><span class="divider">/</span>
</li>
<li>
	<a href="{{path('dicars_logistica_locales')}}">Locales</a>
</li>
{% endblock %}
{% block content %}
<div class="row-fluid sortable">		
	<div class="box span12">
		<div class="box-header well" data-original-title>
			<h2>Locales</h2>
			<div class="box-icon">
				<a href="#" class="btn btn-registrar btn-round" alt="Registrar Local"><i class="icon-plus"></i></a>
				<!-- a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a -->
			</div>
		</div>
		<div class="box-content">
			<table class="table table-striped table-bordered bootstrap-datatable datatable" id="locales_table">
			  <thead>
				  <tr>
					  <th>Nombre</th>
					  <th>Estado</th>
					  <th>Teléfono</th>
					  <th>Dirección</th>
					  <th>Tipo de Rubro</th>
					  <th>Acciones</th>
				  </tr>
			  </thead>   
			  <tbody>
			</tbody>
		</table>
		<div class="modal hide fade" id="modalRegistro">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">x</button>
				<h3>Registrar Local</h3>
			</div>
			<div class="modal-body">
				<form id="RegistrarLocalForm" class="form-horizontal" method="post" action="{{ path('dicars_logistica_registrar_local') }}">
					<fieldset>
					  <div class="control-group">
						<label class="control-label" for="nombre_tienda">Nombre de la Tienda</label>
						<div class="controls">
						  <input class="input-xlarge focused" id="nombre_tienda" name="nombre_tienda" type="text">
						</div>
					  </div>
					  <div class="control-group">
						<label class="control-label" for="estado">Estado</label>
						<div class="controls">
						  <input class="input-xlarge focused" id="estado" name="estado" type="text">
						</div>
					  </div>
					  <div class="control-group">
						<label class="control-label" for="direccion">Dirección</label>
						<div class="controls">
						  <input class="input-xlarge focused" id="direccion" name="direccion" type="text">
						</div>
					  </div>
					  <div class="control-group">
						<label class="control-label" for="telefono">Teléfono</label>
						<div class="controls">
						  <input class="input-xlarge focused" id="telefono" name="telefono" type="text">
						</div>
					  </div>
					  <div class="control-group">
						<label class="control-label" for="ubigeo">Ubigeo</label>
						<div class="controls">
						  <input class="input-xlarge focused" id="ubigeo" name="ubigeo" type="text">
						</div>
					  </div>
					  <div class="control-group">
						<label class="control-label" for="tiprub">Tipo de Rubro</label>
						<div class="controls">
						  <input class="input-xlarge focused" id="tiprub" name="tiprub" type="text">
						</div>
					  </div>
					  <div class="form-actions">
						<button type="submit" class="btn btn-primary">Guardar</button>
						<button type="reset" class="btn" data-dismiss="modal">Cancelar</button>
					  </div>
					</fieldset>
				  </form>
			</div>
		</div>
		<div class="modal hide fade" id="modalEditarLocal">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">x</button>
				<h3>Editar Local</h3>
			</div>
			<div class="modal-body">
				<form id="EditarLocalForm" class="form-horizontal" method="post" action="{{ path('dicars_logistica_editar_local') }}">
				</form>
			</div>
		</div>
		<div class="modal hide fade" id="modalVerDatos">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">x</button>
				<h3>Datos del Local</h3>
			</div>
			<div class="modal-body">
				<div id="VerLocal" class="form-horizontal">
				</div>
			</div>
		</div>   
		</div>
	</div><!--/span-->
</div><!--/row-->

{% endblock %}
{% block javascript %}
<script type="text/javascript" src="{{ asset('js/util/functiongen.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/util/datatable_plugins.js') }}"></script>

<script type="text/javascript">

var oTable;

var ReloadTableEditar = reloadclosemodal('modalEditarLocal');
var ReloadTableRegistrar = reloadclosemodal('modalRegistro');

var CargarBotones = function(){
	//mostrar Editar Cliente------------------------------------>
	$('.btn-editar').click(function(e){
		e.preventDefault();
		$('#modalEditarLocal').modal('show');
		id=$(this).attr("id-data");		
		cargarEditar(id);
	});
	//mostrar Ver Datos------------------------------------>
	$('.btn-datos').click(function(e){
		e.preventDefault();
		$('#modalVerDatos').modal('show');
		id=$(this).attr("id-data");		
		cargarVer(id);	
	});
};

function cargarEditar(id){
	url = "{{ path('dicars_logistica_servicio_getlocalbyid', {'id': ''}) }}/"+id;
	console.log(url);
	local = getAjaxObject(url);			

	ArrayDatos = [	{'type':'hidden','value':local.id,'name':'id'},
	          		{'label':'Nombre de Tienda','type':'input', 'typeinput':'text','value':local.nombre_tienda,'name':'nombre_tienda'},
	              	{'label':'Estado','type':'input','typeinput':'text','value':local.estado,'name':'estado'},
	              	{'label':'Dirección','type':'input','typeinput':'text','value':local.direccion,'name':'direccion'},
	              	{'label':'Teléfono','type':'input','typeinput':'text','value':local.telefono,'name':'telefono'},
	              	{'label':'Ubigeo','type':'input','typeinput':'text','value':local.ubigeo,'name':'ubigeo'},
	              	{'label':'Tipo de Rubro','type':'input','typeinput':'text','value':local.tiprub,'name':'tiprub'},
					{'type':'actions'}
					];
		
	$("#EditarLocalForm").html(crearElementosForm(ArrayDatos));
}

function cargarVer(id){
	url = "{{ path('dicars_logistica_servicio_getlocalbyid', {'id': ''}) }}/"+id;
	local = getAjaxObject(url);			

	ArrayDatos = [	{'label':'Nombre de Tienda','type':'span','value':local.nombre_tienda},
	              	{'label':'Estado','type':'span','value':local.estado},
	              	{'label':'Dirección','type':'span','value':local.direccion},
	              	{'label':'Teléfono','type':'span','value':local.telefono},
	              	{'label':'Ubigeo','type':'span','value':local.ubigeo},
	              	{'label':'Tipo de Rubro','type':'span','value':local.tiprub},
					{'type':'close'}];
		
	$("#VerLocal").html(crearElementosForm(ArrayDatos));
}

//init------------------------------------>
$(document).ready(function(){	
	//mostrar Registrar Cliente------------------------------------>
	$('.btn-registrar').click(function(e){
		e.preventDefault();
		$('#modalRegistro').modal('show');
	});
	
	enviar('RegistrarLocalForm', ReloadTableRegistrar);
	enviar('EditarLocalForm', ReloadTableEditar);

	UrlaDTable = '{{ path("dicars_logistica_servicio_gettablalocales") }}';
	FormatoDTable = [
		              { "sWidth": "12%","mDataProp": "nombre_tienda"},
		              { "sWidth": "12%","mDataProp": "estado"},
		              { "sWidth": "12%","mDataProp": "telefono"},
		              { "sWidth": "12%","mDataProp": "direccion"},
		              { "sWidth": "12%","mDataProp": "tiprub"},
		              { "sWidth": "40%","mDataProp": "Acciones"}
		              ];
	oTable = createDataTable('locales_table',UrlaDTable,FormatoDTable,CargarBotones);
});
</script>
{% endblock %}
{% extends "::baseCharisma.html.twig" %}
{% block title %}Proveedores - Logística -{% endblock %}
{% block breadcrumb %}
<li>
	<a href="{{path('dicars_ventas_homepage')}}">Logística</a> <span class="divider">/</span>
</li>
<li>
	<a href="{{path('dicars_logistica_proveedores')}}">Proveedores</a>
</li>
{% endblock %}
{% block content %}
<div class="row-fluid sortable">		
	<div class="box span12">
		<div class="box-header well" data-original-title>
			<h2>Proveedores</h2>
			<div class="box-icon">
				<a href="#" class="btn btn-registrar btn-round" alt="Registrar Proveedor"><i class="icon-plus"></i></a>
				<!-- a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a -->
			</div>
		</div>
		<div class="box-content">
		<table class="table table-striped table-bordered bootstrap-datatable datatable" id="proveedores_table">
			<thead>
				<tr>
					<th>RUC</th>
					<th>Razón Social</th>
					<th>Teléfono</th>
					<th>Email</th>
					<th>Página Web</th>
					<th>Acciones</th>
				</tr>
			</thead>   
			<tbody>
			</tbody>
		</table>
		<div class="modal hide fade" id="modalRegistro">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">x</button>
				<h3>Registrar Proveedor</h3>
			</div>
			<div class="modal-body">
				<form id="RegistrarProveedorForm" class="form-horizontal" method="post" action="{{ path('dicars_logistica_registrar_proveedor') }}">
					<fieldset>
					  <div class="control-group">
						<label class="control-label" for="ruc">RUC</label>
						<div class="controls">
						  <input class="input-xlarge focused" id="ruc" name="ruc" type="text">
						</div>
					  </div>
					  <div class="control-group">
						<label class="control-label" for="razonsocial">Razón Social</label>
						<div class="controls">
						  <input class="input-xlarge focused" id="razonsocial" name="razonsocial" type="text">
						</div>
					  </div>
					  <div class="control-group">
						<label class="control-label" for="ccorriente">Cuenta Corriente</label>
						<div class="controls">
						  <input class="input-xlarge focused" id="ccorriente" name="ccorriente" type="text">
						</div>
					  </div>
					  <div class="control-group">
						<label class="control-label" for="direccion">Dirección</label>
						<div class="controls">
						  <input class="input-xlarge focused" id="direccion" name="direccion" type="text">
						</div>
					  </div>
					  <div class="control-group">
						<label class="control-label" for="telefono">Teléfono</label>
						<div class="controls">
						  <input class="input-xlarge focused" id="telefono" name="telefono" type="text">
						</div>
					  </div>
					  <div class="control-group">
						<label class="control-label" for="email">Email</label>
						<div class="controls">
						  <input class="input-xlarge focused" id="email" name="email" type="text">
						</div>
					  </div>
					  <div class="control-group">
						<label class="control-label" for="paginaweb">Página Web</label>
						<div class="controls">
						  <input class="input-xlarge focused" id="paginaweb" name="paginaweb" type="text">
						</div>
					  </div>
					  <div class="form-actions">
						<button type="submit" class="btn btn-primary">Guardar</button>
						<button type="reset" class="btn" data-dismiss="modal">Cancelar</button>
					  </div>
					</fieldset>
				  </form>
			</div>
			<!-- div class="modal-footer">
				<a href="#" class="btn" data-dismiss="modal">Cancelar</a>
				<a href="#" class="btn btn-primary">Guardar</a>
			</div -->
		</div> 
		<div class="modal hide fade" id="modalVerDatos">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">x</button>
				<h3>Datos del Proveedor</h3>
			</div>
			<div class="modal-body">
				<div class="form-horizontal">
					<fieldset>
					  <div class="control-group">
						<label class="control-label" for="rucvd">RUC</label>
						<div class="controls">
						  <span class="help-inline" style="margin-top:5px;">32847283709</span>
						</div>
					  </div>
					  <div class="control-group">
						<label class="control-label" for="razonsocialvd">Razón Social</label>
						<div class="controls">
						  <span class="help-inline" style="margin-top:5px;">Lolo SRL</span>
						</div>
					  </div>
					  <div class="control-group">
						<label class="control-label" for="telefonovd">Teléfono</label>
						<div class="controls">
						  <span class="help-inline" style="margin-top:5px;">999999999</span>
						</div>
					  </div>
					  <div class="control-group">
						<label class="control-label" for="emailvd">Email</label>
						<div class="controls">
						  <span class="help-inline" style="margin-top:5px;">lolo@lolo.com</span>
						</div>
					  </div>
					  <div class="control-group">
						<label class="control-label" for="paginawebvd">Página Web</label>
						<div class="controls">
						  <span class="help-inline" style="margin-top:5px;">lolo.com</span>
						</div>
					  </div>
					  <div class="form-actions">
						<!-- button type="submit" class="btn btn-primary">Guardar</button -->
						<button type="reset" class="btn" data-dismiss="modal">Cerrar</button>
					  </div>
					</fieldset>
				  </div>
			</div>
			<!-- div class="modal-footer">
				<a href="#" class="btn" data-dismiss="modal">Cancelar</a>
				<a href="#" class="btn btn-primary">Guardar</a>
			</div -->
		</div>      
		</div>
	</div><!--/span-->
</div><!--/row-->

{% endblock %}
{% block javascript %}
<script type="text/javascript" src="{{ asset('js/util/functiongen.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/util/datatable_plugins.js') }}"></script>

<script type="text/javascript">
$(document).ready(init());

//Init------------------------------------>
function init(){

	var CargarBotones = function(){
		//mostrar Registrar Cliente------------------------------------>
		$('.btn-registrar').click(function(e){
			e.preventDefault();
			$('#modalRegistro').modal('show');
		});
		//mostrar Editar Cliente------------------------------------>
		$('.btn-editar').click(function(e){
			e.preventDefault();
			$('#modalRegistro').modal('show');
		});
		//mostrar Ver Datos Cliente------------------------------------>
		$('.btn-datos').click(function(e){
			e.preventDefault();
			$('#modalVerDatos').modal('show');
		});
	};
	
	enviar('RegistrarProveedorForm', logdata);

	UrlaDTable = '{{ path("dicars_logistica_servicio_gettablaproveedores") }}';
	FormatoDTable = [
		              { "sWidth": "12%","mDataProp": "ruc"},
		              { "sWidth": "12%","mDataProp": "razonsocial"},
		              { "sWidth": "12%","mDataProp": "telefono"},
		              { "sWidth": "12%","mDataProp": "email"},
		              { "sWidth": "12%","mDataProp": "sitioweb"},
		              { "sWidth": "40%","mDataProp": "Acciones"}
		              ];
	oTable = createDataTable('proveedores_table',UrlaDTable,FormatoDTable,CargarBotones);
}
</script>
{% endblock %}
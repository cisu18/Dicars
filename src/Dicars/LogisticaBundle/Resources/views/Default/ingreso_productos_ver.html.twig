{% extends "::baseCharisma.html.twig" %}
{% block title %}Ingreso Productos: Ver - Logística -{% endblock %}
{% block breadcrumb %}
<li>
	<a href="{{path('dicars_logistica_homepage')}}">Logística</a><span class="divider">/</span>
</li>
<li>
	<a href="{{path('dicars_logistica_reg_ingresoproductos')}}">Ingreso Productos: Ver</a>
</li>
</li>
{% endblock %}
{% block content %}
<div class="row-fluid sortable">		
	<div class="box span12">
		<div class="box-header well" data-original-title>
			<h2>Salida Productos: Ver Datos</h2>
		</div>
		<div class="box-content">
			<div id="RegistrarIngresoForm" class="form-horizontal">
				<fieldset>
					<div class="row-fluid">
						<div class="span6">
							<div class="control-group">
								<label class="control-label" for="codigo">Código</label>
								<div class="controls">
									<span class="help-inline" style="margin-top:5px;">{{ serie }} - {{ nro }}</span>
								</div>
							</div>
							<div class="control-group">
								<label class="control-label" for="registrador">Registrador</label>
								<div class="controls">
									<span class="help-inline" style="margin-top:5px;">{{ personal }}</span>
								</div>
							</div>
							<div class="control-group">
								<label class="control-label" for="motivo">Motivo</label>
								<div class="controls">
									<span class="help-inline" style="margin-top:5px;">{{ motivo }}</span>
								</div>
							</div>
							<div class="control-group">
								<label class="control-label" for="tienda">Tienda</label>
								<div class="controls">
								  	<span class="help-inline" style="margin-top:5px;">{{ local }}</span>
								</div>
							</div>
						</div>
						<div class="span6">
							<div class="control-group">
								<label class="control-label" for="fecha">Fecha</label>
								<div class="controls">
									<span class="help-inline" style="margin-top:5px;">{{ fecha_reg }}</span>
								</div>
							</div>
							<div class="control-group">
								<label class="control-label" for="solicitante">Nro Serie</label>
								<div class="controls">
									<span class="help-inline" style="margin-top:5px;">{{ serie_nro }}</span>
								</div>
							</div>
							
							<div class="control-group">
								<label class="control-label" for="solicitante">Serie Doc</label>
								<div class="controls">
									<span class="help-inline" style="margin-top:5px;">{{ serie_doc }}</span>
								</div>
							</div>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="observaciones">Observaciones</label>
						<div class="controls">
							<span class="help-inline" style="margin-top:5px;">{{ observacion }}</span>
						</div>
					</div>
				</fieldset>
			</div>
			<hr>
			<h3>Productos a Salir</h3>
			<hr>
			<table id="deting_productos_table" name="deting_productos_table" class="table table-striped table-bordered bootstrap-datatable datatable">
				<thead>
					  <tr>
						  <th>Serie Producto</th>
						  <th>Cantidad</th>
						  <th>Precio Unit</th>
						  <th>Total</th>
					  </tr>
				</thead>   
				<tbody>
				</tbody>
			</table>
			<div class="form-horizontal">
				<div class="form-actions">
					<a href="{{ path('dicars_logistica_cons_ingresoproductos') }}" class="btn btn-primary">Volver</a>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block javascript %}
<script src="{{ asset('js/util/functiongen.js') }}"></script>
<script src="{{ asset('js/util/datatable_plugins.js') }}"></script>
<script type="text/javascript">

$(document).ready(function(){
	
	UrlaDTableProductos = '{{ path("dicars_logistica_servicio_gettabladetingprod",{'id':''}) }}/{{ id }}';
	FormatoDTableProductos = [
		              { "sWidth": "25%","mDataProp": "producto_serie"},
		              { "sWidth": "25%","mDataProp": "cantidad"},
		              { "sWidth": "25%","mDataProp": "precio_uni"},
		              { "sWidth": "25%","mDataProp": "total"},
		              ];
	BuscarProductosTable = createDataTable('deting_productos_table',UrlaDTableProductos,FormatoDTableProductos);
});
</script>
{% endblock %}
{% extends "::baseCharisma.html.twig" %}
{% block title %}Clientes - Ventas -{% endblock %}
{% block breadcrumb %}
<li>
	<a href="{{path('dicars_ventas_homepage')}}">Ventas</a> <span class="divider">/</span>
</li>
<li>
	<a href="{{path('dicars_ventas_cronograma')}}">Cronograma de Pago</a>
</li>
{% endblock %}
{% block content %}
<div class="row-fluid">		
	<div class="box span12">
		<div class="box-header well" data-original-title>
			<h2><i class="icon-user"></i> Créditos</h2>
		</div>
		<div class="box-content">
			<table class="table table-striped table-bordered bootstrap-datatable datatable" id="creditos_table">
			  <thead>
				  <tr>
					  <th>ID</th>
					  <th>Monto Total</th>
					  <th>Monto Pagado</th>
					  <th>Nro de Cuotas</th>
					  <th></th>
				  </tr>
			  </thead>
		  </table>
		</div>
		<div class="modal hide fade" id="modalCuotas">
			<div class="modal-header">
				<h3>Cuotas</h3>
			</div>
			<div class="modal-body">
				<form id="EditarOfertasForm" class="form-horizontal" method="post" action="{{ path('dicars_ventas_editar_oferta') }}">
					<div class="control-group">
						<label class="control-label" for="amortizacion">A cuenta</label>
						<div class="controls">
							<div class="input-prepend input-append">
								<input class="input-xlarge focused" style="margin: 0 0px 0 0;" name="monto" id="monto" type="number" step="0.1" value="0" min="0"><span id="spanamort" class="add-on">s/.</span>
								<button id="pagar"type="button" class="btn btn-warning btn-buscarc" style="margin: 0 18px;">Pagar</button>
							</div>
						</div>
					</div>
				</form>
				<table id="cuotas_table" class="table table-striped table-bordered bootstrap-datatable datatable">
				  <thead>
					  <tr>
						  <th>Fecha de Pago</th>
						  <th>Nro de Cuota</th>
						  <th>Monto</th>
					  </tr>
				  </thead>   
				  <tbody>			
				  </tbody>
			  </table> 
			</div>
			<div class="modal-footer">
				<a href="#" class="btn" data-dismiss="modal">Cerrar</a>
				<a id="btn-guardar" href="#" class="btn btn-primary">Guardar</a>
			</div>
		</div> 
	</div><!--/span-->
</div><!--/row-->

{% endblock %}
{% block javascript %}
<script src="{{ asset('js/util/functiongen.js') }}"></script>
<script src="{{ asset('js/util/datatable_plugins.js') }}"></script>
<script type="text/javascript">

var CuotasTable;
var CreditosTable;
var RowCallBackFunction;
var jsonData;
var Band = true;

function CalcularPago(){
	/*console.log(jsonData);
	CuotasTable.fnClearTable();
	CuotasTable.fnAddData(jQuery.parseJSON(jsonData));*/
	CloneAttrTable(CuotasTable,'cmonto',2);
	var Array = CuotasTable.fnGetData();
	var Monto = $("#monto").val();
	$(Array).each(function(index){
		Monto-=this.monto;
		var quedan = 0;
		if(Monto <= 0){
			quedan = Math.abs(Monto);
			Monto = 0;
		}
		else
			quedan = 0;
		CuotasTable.fnUpdate(quedan.toFixed(2),index,2);
		return (Monto != 0);
	});
	console.log(CuotasTable.fnGetData());
};

$(document).ready(function(){
	$("#pagar").click(function(e){
		e.preventDefault();
		CalcularPago();
	});
	
	RowCallBackFunction = function(nRow, aData, iDisplayIndex){
		$(nRow).find('.btn-pagar').click(function(e){
			e.preventDefault();
			CuotasTable.fnClearTable();
			CuotasTable.fnReloadAjax("{{ path('dicars_ventas_servicio_gettablacuotasbyId',{'idcredito':''}) }}/"+aData.idcredito);
			$('#modalCuotas').modal('show');
			Band = true;
		});
	};
	
	UrlaDTableCredito = "{{ path('dicars_ventas_servicio_gettablacreditosbyId',{'idcliente':''}) }}/{{ idcliente }}";
	FormatoDTableCredito = [
	              { "sWidth": "15%","mDataProp": "idventa"},
	              { "sWidth": "15%","mDataProp": "montototal"},
	              { "sWidth": "15%","mDataProp": "montopagado"},
	              { "sWidth": "15%","mDataProp": "cuotas"},	              
	              { "sWidth": "13%","mDataProp": "ver_pagar"}
	              ];
	CreditosTable = createDataTable('creditos_table',UrlaDTableCredito,FormatoDTableCredito,null,RowCallBackFunction);
	
	CuotasTable = $('#cuotas_table').dataTable({
		"bProcessing": true,
		"bServerSide": false,
		"bDestroy": true,
		"sAjaxSource": "{{ path('dicars_ventas_servicio_gettablacuotasbyId',{'idcredito':0}) }}",	  
		"aoColumns": [
		              { "sWidth": "15%","mDataProp": "fecpago"},
		              { "sWidth": "15%","mDataProp": "nrocuota"},
		              { "sWidth": "15%","mDataProp": "monto"}
		              ],
		"fnDrawCallback": function(oSettings ){
					setTimeout(function() {
						if(Band){
							CloneAttr(CuotasTable.fnGetData(),'monto','cmonto');
							if(CuotasTable.fnGetData().length>0)
								Band = false;
						}							
		      		});
		      	},
	 	"aaSorting": [ [0, 'asc'], [1, 'asc'] ],
	 	"bPaginate": false,
		"bLengthChange": false,
		"bFilter": true,
		"bSort": false,
		"bInfo": false,
		"bAutoWidth": false,
	 	"aoColumnDefs": [
	                  {"sType": 'string-case', "aTargets": [2]}],
		 	"sDom": "<r>t<'row-fluid'>",
		 	"sPaginationType": "bootstrap",
		 	"oLanguage": {
			"sLengthMenu": "_MENU_ registros por página"
				}	
		});
});

</script>
{% endblock %}
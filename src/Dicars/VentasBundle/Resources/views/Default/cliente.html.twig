	              	{'label':'Dni','type':'span','typeinput':'text','value':cliente.dni,'name':'dni'},
	              	{'label':'Referencia','type':'span','typeinput':'text','value':cliente.referencia,'name':'referencia'},
	              	{'label':'Dirección','type':'span','typeinput':'text','value':cliente.direccion,'name':'direccion'},
	              	{'label':'Zona','type':'span','typeinput':'text','value':cliente.zona,'name':'zona'},
	              	{'label':'Línea Op','type':'span','typeinput':'text','value':cliente.lineaop,'name':'lineaop'},
	              	{'label':'Arc Crédito','type':'span','typeinput':'text','value':cliente.arccredito,'name':'arccredito'},
	              	{'label':'Ocupación','type':'span','typeinput':'text','value':cliente.ocupacion,'name':'ocupacion'},
					{'type':'close'}];
		
	$("#VerClienteForm").html(crearElementosForm(ArrayDatos));
}

$(document).ready(function(){

	//mostrar Registrar Cliente------------------------------------>
	$('.btn-registrar').click(function(e){
	e.preventDefault();
	$('#modalRegistro').modal('show');
	});

	enviar('RegistrarClienteForm', ReloadTableRegistrar);
	enviar('EditarClienteForm', ReloadTableEditar);
	
	UrlaDTable = '{{ path("dicars_ventas_servicio_gettablaclientes") }}';
	FormatoDTable = [
	              { "sWidth": "15%","mDataProp": "nombre"},
	              { "sWidth": "15%","mDataProp": "apellido"},
	              { "sWidth": "15%","mDataProp": "dni"},
	              { "sWidth": "15%","mDataProp": "linea_credito"},	              
	              { "sWidth": "40%","mDataProp": "Acciones"}
	              ];
oTable = createDataTable('clientes_table',UrlaDTable,FormatoDTable,CargarBotones);
	
});

</script>
{% endblock %}
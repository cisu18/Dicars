{% extends "::baseCharisma.html.twig" %}
{% block title %}Trabajadores - Ventas -{% endblock %}
{% block breadcrumb %}
<li>
	<a href="{{path('dicars_ventas_homepage')}}">Ventas</a> <span class="divider">/</span>
</li>
<li>
	<a href="{{path('dicars_ventas_trabajadores')}}">Trabajadores</a>
</li>
{% endblock %}
{% block content %}
<div class="row-fluid sortable">		
	<div class="box span12">
		<div class="box-header well" data-original-title>
			<h2><i class="icon-user"></i>Trabajadores</h2>
			<div class="box-icon">
				<a href="#" class="btn btn-registrar btn-round" alt="Registrar Trabajador"><i class="icon-plus"></i></a>
				<!-- a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a -->
			</div>
		</div>
		<div class="box-content">
			
			<table class="table table-striped table-bordered bootstrap-datatable datatable" id="empleados_table">
			  <thead>
				  <tr>
					  <th>Nombres</th>
					  <th>Apellidos</th>
					  <th>DNI</th>
					  <th>Tel√©fono</th>
					  <th>Acciones</th>
				  </tr>
			  </thead>
		  	</table> 

		{% include 'DicarsVentasBundle:Default:registrar_trabajador.html.twig' %} 
		
		<div class="modal hide fade" id="modalEditarDatos">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">x</button>
				<h3>Editar Trabajador</h3>
			</div>
			<div class="modal-body">
				<form id="EditarEmpleadoForm" class="form-horizontal" method="post" action="{{ path('dicars_ventas_editar_trabajador') }}">
				</form>
			</div>
		</div>		
		
		<div class="modal hide fade" id="modalVerDatos">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">x</button>
				<h3>Datos del Trabajador</h3>
			</div>
			<div class="modal-body">
				<div id="VerEmpleadoForm" class="form-horizontal">
				</div>
			</div>
		</div>  
		    
		</div>
	</div><!--/span-->
</div><!--/row-->

{% endblock %}
{% block javascript %}
<script src="{{ asset('js/util/functiongen.js') }}"></script>
<script src="{{ asset('js/util/datatable_plugins.js') }}"></script>
<script type="text/javascript">

var oTable;

var ReloadTableEditar = reloadclosemodal('modalEditarDatos');
var ReloadTableRegistrar = reloadclosemodal('modalRegistro');

var CargarBotones = function(){
	//	mostrar Editar Trabajador------------------------------------>
		$('.btn-editar').click(function(e){
			e.preventDefault();
			$('#modalEditarDatos').modal('show');
			id=$(this).attr("id-data");		
			cargarEditar(id);
		});		
	//mostrar Ver Datos Trabajador------------------------------------>
		$('.btn-datos').click(function(e){
			e.preventDefault();
			$('#modalVerDatos').modal('show');
			id=$(this).attr("id-data");		
			cargarVer(id);
		});
	};

function cargarEditar(id){
		url = "{{ path('dicars_ventas_servicio_gettrabajadorbyid', {'id': ''}) }}/"+id;	
		empleado = getAjaxObject(url);
				
		ArrayDatos = [	{'type':'hidden','value':empleado.id,'name':'id'},
		      			{'label':'Cargo','type':'input', 'typeinput':'text','value':empleado.cargo,'name':'cargo'},
						{'label':'Nombres','type':'input', 'typeinput':'text','value':empleado.nombres,'name':'nombres'},
		              	{'label':'Apellidos','type':'input','typeinput':'text','value':empleado.apellidos,'name':'apellidos'},
		              	{'label':'Dni','type':'input','typeinput':'text','value':empleado.dni,'name':'dni'},
		              	{'label':'Telefono','type':'input','typeinput':'text','value':empleado.telefono,'name':'telefono'},
		              	{'label':'Email','type':'input','typeinput':'text','value':empleado.email,'name':'email'},
		              	{'label':'Fecha Nacimiento','type':'input','typeinput':'text','value':empleado.fechanacimiento,'name':'fechanacimiento'},
		              	{'label':'Sexo','type':'input','typeinput':'text','value':empleado.sexo,'name':'sexo'},
		              	{'label':'Estado','type':'input','typeinput':'text','value':empleado.estado,'name':'estado'},
		              	{'label':'Edad','type':'input','typeinput':'text','value':empleado.edad,'name':'edad'},
						{'type':'actions'}];
			
		$("#EditarEmpleadoForm").html(crearElementosForm(ArrayDatos));
	}
	
function cargarVer(id){
		url = "{{ path('dicars_ventas_servicio_gettrabajadorbyid', {'id': ''}) }}/"+id;			
		empleado = getAjaxObject(url);
				

		ArrayDatos = [	{'label':'Cargo','type':'span', 'typeinput':'text','value':empleado.cargo,'name':'nombres'},
						{'label':'Nombres','type':'span', 'typeinput':'text','value':empleado.nombres,'name':'nombres'},
		              	{'label':'Apellidos','type':'span','typeinput':'text','value':empleado.apellidos,'name':'apellidos'},
		              	{'label':'Dni','type':'span','typeinput':'text','value':empleado.dni,'name':'dni'},
		              	{'label':'Telefono','type':'span','typeinput':'text','value':empleado.telefono,'name':'telefono'},
		              	{'label':'Email','type':'span','typeinput':'text','value':empleado.email,'name':'email'},
		              	{'label':'Fecha Nacimiento','type':'span','typeinput':'text','value':empleado.fechanacimiento,'name':'fechanacimiento'},
		              	{'label':'Sexo','type':'span','typeinput':'text','value':empleado.sexo,'name':'sexo'},
		              	{'label':'Estado','type':'span','typeinput':'text','value':empleado.estado,'name':'estado'},
		              	{'label':'Edad','type':'span','typeinput':'text','value':empleado.edad,'name':'edad'},
						{'type':'close'}];
			
		$("#VerEmpleadoForm").html(crearElementosForm(ArrayDatos));
	}
	
$(document).ready(function(){
//	mostrar Registrar Trabajador------------------------------------>
	$('.btn-registrar').click(function(e){
		e.preventDefault();
		$('#modalRegistro').modal('show');
	});
	
	enviar('RegistrarTrabajadorForm', ReloadTableRegistrar);
	enviar('EditarEmpleadoForm', ReloadTableEditar);
	
	UrlaDTable = '{{ path("dicars_ventas_servicio_gettablaempleados") }}';
	FormatoDTable = [
	              { "sWidth": "15%","mDataProp": "nombres"},
	              { "sWidth": "15%","mDataProp": "apellidos"},
	              { "sWidth": "15%","mDataProp": "dni"},
	              { "sWidth": "15%","mDataProp": "telefono"},	              
	              { "sWidth": "40%","mDataProp": "Acciones"}
	              ];
	oTable = createDataTable('empleados_table',UrlaDTable,FormatoDTable,CargarBotones);		
		});

</script>
{% endblock %}